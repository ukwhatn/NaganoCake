<div class="col-12 col-lg-8 offset-lg-2">
  <h4 class="d-inline-block bg-light px-3 py-2">
    <%= @customer.full_name %>さんの会員詳細
  </h4>
  <table class="table-borderless" style="border-collapse: separate; border-spacing: 20px;">
    <tbody>
    <tr>
      <td>会員ID</td>
      <td><%= @customer.id %></td>
    </tr>
    <tr>
      <td>氏名</td>
      <td><%= @customer.full_name %></td>
    </tr>
    <tr>
      <td>フリガナ</td>
      <td><%= @customer.full_name_kana %></td>
    </tr>
    <tr>
      <td>郵便番号</td>
      <td><%= @customer.postal_code %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <td>電話番号</td>
      <td><%= @customer.telephone_number %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= @customer.email %></td>
    </tr>
    <tr>
      <td>会員ステータス</td>
      <td>
        <% if @customer.is_deleted %>
          <span class="text-secondary">退会</span>
        <% else %>
          <span class="text-success">有効</span>
        <% end %>
      </td>
    </tr>
    </tbody>
  </table>

  <div class="row form-group mt-4">
    <div class="col-3 offset-2">
      <%= link_to "編集する", edit_admin_customer_path(@customer) , class: "btn btn-success w-100" %>
    </div>
    <div class="col-3 offset-2">
      <%= link_to "注文履歴一覧を見る", admin_path, class: "btn btn-primary w-100" %>
    </div>
  </div>

</div>