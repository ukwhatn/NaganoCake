<%= render "layouts/error_messages", resource: resource %>
<%= form_with model: resource, url: request_to do |f| %>
  <div class="form-group row">
    <%= f.label :image, class: "col-md-4 col-form-label" %>
    <div class="col-md-8">
      <%= f.file_field :image, class: "form-control-file", accept: "image/*" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :name, class: "col-md-4 col-form-label" %>
    <div class="col-md-8">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :description, class: "col-md-4 col-form-label" %>
    <div class="col-md-8">
      <%= f.text_area :description, class: "form-control", rows: "5" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :price, class: "col-md-4 col-form-label" %>
    <div class="col-md-8">
      <%= f.number_field :price, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-8 offset-4 mt-4">
      <%= f.submit resource.persisted? ? "変更保存" : "新規登録", class: "btn btn-success" %>
    </div>
  </div>
<% end %>