<div class="col-12 col-lg-4 offset-lg-2">
  <h4 class="d-inline-block bg-light px-3 py-2">
    ジャンル編集
  </h4>
  <%= render "layouts/error_messages", resource: @genre %>
  <%= form_with model: @genre, url: admin_genre_path(@genre) do |f| %>
    <table class="table-borderless">
      <tbody>
      <tr>
        <th>
          ジャンル名
        </th>
        <td class="px-3">
          <%= f.text_field :name, class: "form-control w-100" %>
        </td>
        <td>
          <%= f.submit "変更を保存", class: "btn btn-success font-weight-bold" %>
        </td>
      </tr>
      </tbody>
    </table>
  <% end %>
</div>