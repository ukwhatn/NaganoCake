<div class="col-md-8 offset-md-2">
  <h4 class="d-inline-block bg-light px-3 py-2">
    管理者ログイン
  </h4>

  <% if alert.present? %>
    <div class="alert alert-danger">
      <%= alert %>
    </div>
  <% end %>

  <%= form_with model: @admin, url: admin_session_path do |f| %>
    <div class="form-group row">
      <%= f.label :email, class: "col-md-4 col-form-label" %>
      <div class="col-md-8">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :password, class: "col-md-4 col-form-label" %>
      <div class="col-md-8">
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-md-8 offset-4 mt-4">
        <%= f.submit "ログイン", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>