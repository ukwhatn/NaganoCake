<div class="row">
  <div class="col-12 col-lg-8 offset-lg-2">

    <div class="row mt-5 d-flex align-items-baseline">
      <h2>
        商品一覧
      </h2>
      <div>
        (全<%= @items.total_count %>件)
      </div>
    </div>

    <div class="row my-3">
      <% @items.each do |item| %>
        <div class="col-3 d-flex flex-wrap align-content-between mb-4">
          <%= link_to item_path(item), class: "flex-grow-0 flex-shrink-0 w-100" do %>
            <%= image_tag item.get_image("300x300"), class: "w-100" %>
          <% end %>
          <div>
            <div class="my-1 font-weight-bold">
              <%= item.name %>
            </div>
            <div class="my-1 font-weight-bold">
              ¥ <%= item.price.to_s(:delimiter) %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="d-flex justify-content-center">
      <%= paginate @items %>
    </div>

  </div>
</div>
