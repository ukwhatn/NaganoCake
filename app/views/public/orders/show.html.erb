<div class="col-12 col-lg-10 offset-lg-1">
  <h4 class="d-inline-block bg-light px-3 py-2">
    注文履歴詳細
  </h4>
  <div class="row">
    <div class="col-12 col-lg-9 mt-2 mt-lg-0">
      <h5 class="h5">
        注文情報
      </h5>
      <table class="table-bordered w-100">
        <tr>
          <th class="bg-light p-2">
            注文日
          </th>
          <td class="p-2">
            <%= @order.created_at.strftime("%Y/%m/%d") %>
          </td>
        </tr>
        <tr>
          <th class="bg-light p-2">
            配送先
          </th>
          <td class="p-2">
            〒 <%= @order.postal_code %><br>
            <%= @order.address %><br>
            <%= @order.name %>
          </td>
        </tr>
        <tr>
          <th class="bg-light p-2">
            支払方法
          </th>
          <td class="p-2">
            <%= @order.payment_method_i18n %>
          </td>
        </tr>
      </table>
    </div>
    <div class="col-12 col-lg-3 mt-2 pl-lg-1 mt-lg-0">
      <h5 class="h5">
        請求情報
      </h5>
      <table class="table-bordered w-100">
        <tr>
          <th class="bg-light p-2">
            商品合計
          </th>
          <td class="p-2">
            <%= @order.order_details.sum(&:subtotal).to_s(:delimited) %>
          </td>
        </tr>
        <tr>
          <th class="bg-light p-2">
            配送料
          </th>
          <td class="p-2">
            <%= @order.shipping_cost.to_s(:delimited) %>
          </td>
        </tr>
        <tr>
          <th class="bg-light p-2">
            ご請求額
          </th>
          <td class="p-2">
            <%= (@order.shipping_cost + @order.order_details.sum(&:subtotal)).to_s(:delimited) %>
          </td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col-12">
      <h5 class="h5">
        注文内容
      </h5>
      <table class="table-bordered w-100">
        <thead class="bg-light">
        <tr>
          <th class="p-2">
            商品
          </th>
          <th class="p-2">
            単価 (税込)
          </th>
          <th class="p-2">
            数量
          </th>
          <th class="p-2">
            小計
          </th>
        </tr>
        </thead>
        <tbody>
        <% @order.order_details.each do |order_detail| %>
          <tr>
            <td class="p-2 font-weight-bold">
              <%= order_detail.item.name %>
            </td>
            <td class="p-2">
              <%= order_detail.price.to_s(:delimited) %>
            </td>
            <td class="p-2">
              <%= order_detail.amount %>
            </td>
            <td class="p-2">
              <%= order_detail.subtotal.to_s(:delimited) %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>